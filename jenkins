pipeline {
    agent any

    environment {
        KUBECONFIG_CONTENT = credentials('config')
        git_url = 'https://github.com/Sano-Mikey/k8s-hello-app.git'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'git_access',
                    url: env.git_url
            }
        }

        // ... other stages ...
    }

    post {
        always {
            node('any') {  // Add node block here
                script {
                    sh '''
                        kubectl get pods
                        kubectl get svc
                        kubectl get deployments
                    '''
                }
            }
        }
        failure {
            node('any') {  // Add node block here
                script {
                    sh '''
                        kubectl describe pods
                        kubectl logs -l app=hello-app
                    '''
                }
            }
        }
    }
}
